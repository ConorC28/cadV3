<div class ="container" id = "main">
	<div class = "row">
		<div class="col-lg-12">
			<h1><%= @title %></h1>
				<div id ="pdbcontent">
					<p><%= @patientdbcontent1%></p>
					
				</div>
				<!--
					<%= form_tag patients_path, :method => 'get' do  %>
						<%= text_field_tag :search, params[:search] %>
						<%= submit_tag 'Search' %>
					<% end %>	
				-->
				
			<div class = "searchtable">
				<table>
					<thead>
						<tr>
							<th>Patient ID</th>
							<th>First Name</th>
							<th>Second Name</th>
							<th>Date of Birth</th>
							<th>Address</th>
							<th>Contact_Number</th>
							<th colspan="6"></th>
						</tr>
					</thead>
				
				<tbody>
						<% @patients.each do |patient| %>
						<p><%= link_to 'View Details', patient_path(patient) %></p>
							<tr>
								<td><%= patient.id %></td><p>
								<td><%= patient.firstname %></td>
								<td><%= patient.secondname %></td>
								<td><%= patient.dateofbirth %></td>
								<td><%= patient.address %></td>
								<td><%= patient.phonenumber %></td>
							</tr>
							
						<% end %>
				
					</tbody>
				</table>
				
				</br>
				
				<table>
					<thead>
						<tr>
							<th>Illness</th>
							<th>Relevant Medical Information</th>
							<th>Next of Kin First Name</th>
							<th>Next of Kin Second Name</th>
							<th>Next of Kin Contact Number</th>
							<th>Next of Kin Address</th>
							<th>Date entered into System</th>
							<th colspan="7"></th>
						</tr>
					</thead>
				
				<tbody>
						<% @patients.each do |patient| %>
							<tr>
								<td><%= patient.illness %></td>
								<td><%= patient.relevantmedicalinfo %></td>
								<td><%= patient.nextofkinfirstname %></td>
								<td><%= patient.nextofkinsecondname %></td>
								<td><%= patient.nextofkincontactnumber %></td>
								<td><%= patient.nextofkinaddress %></td>
								<td><%= patient.created_at %></td>
								<td colspan="6"></td>
								
							</tr>
							
						<% end %>
				
					</tbody>
				</table>
				</br>
				
			</div>
				
		</div>
	</div>
</div>